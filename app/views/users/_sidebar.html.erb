
    <div class="col-md-3">

			<h2>User info</h2>
	
			<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
	
			<table class="table">
		
				<tr>
					<th>name</th>
					<td><%= user.name %></td>
				</tr>
				<tr>
					<th>introduction</th>
					<td><%= user.introduction %></td>
				</tr>
		
			</table>
	
			<div class="row">
				
    		 <% if user == current_user %>
       	 <%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>
       	 <% else %>
       	 <%= link_to "", books_path, class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>
       	 <% end %>
  	
  		</div>
    
		
			<h2 class="mt-3">New book</h2>

			<% if new_book.errors.any? %>
	
	  	<div id="error_explanation">
	  		<h2><%= new_book.errors.count %> errors prohibited this obj from being saved:</h2>
	    		<ul>
	    			<% new_book.errors.full_messages.each do |msg| %>
	      		<li><%= msg %></li>
	    			<% end %>
	    		</ul>
	  	</div>
	  
			<% end %>
			
			
			<%= form_for(new_book, url:'/books') do |f| %>
			
			<div class="form-group">
				<label for="book_title">Title</label></br>
				<%= f.text_field :title, class: "form-control" %>
			</div>
			
			<div class="form-group">
				<label for="book_opinion">Opinion</label>
				<%= f.text_area :body, class: "form-control" %>
			</div>
			
			<div class="form-group">
			<%= f.submit 'Create Book', class: "btn btn-success"%>
			</div>
			
			<% end %>

  	</div>
