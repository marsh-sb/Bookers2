<div class="container px-5 px-sm-0">
  <div class="row">
      
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        
    <h2>User info</h2>


    <% if @user.errors.any? %>

    <div id="error_explanation">
    <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
    
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    
    </div>
    <% end %>


    <%= form_for(@user) do |f| %>

    <div class="form-group">
        <label>Name</label></br>
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder:"" %>
    </div>
    
    <div class="form-group">
        <label>Image</label></br>
        <%= f.attachment_field :profile_image%>
    </div>
    
    <div class="form-group">
        <label>Introduction</label></br>
        <%= f.text_area :introduction, class: "form-control", autofocus: true , placeholder:"" %>
    </div>
    
    <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary"%>
    </div>
    
    <% end %>
    </div>
  </div>
</div>

