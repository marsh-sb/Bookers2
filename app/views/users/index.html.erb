<%= render partial: 'users/sidebar', locals: {user:@user, new_book:@new_book} %>


	<h2>Users</h2>
	
	<table>
		<thead>
			
			<tr>
				<th>image</th>
				<th>name</th>
				<th>&nbsp;</th>
			</tr>
			
		</thead>
		
		<tbody>
			<% @users.each do |user| %>
			
			<tr>
				<td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %></td>
				<td><%= user.name %></td>
				<td><%= link_to "Show", user_path(user.id) %></td>
			</tr>
			
			<% end %>
		</tbody>
		
	</table>