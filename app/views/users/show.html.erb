<%= render partial: 'users/sidebar', locals: {user:@user, new_book:@new_book} %>


	<h2>Books</h2>
	
	<table>
		
		<thead>
			
			<tr>
				<th>&nbsp;</th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
			
		</thead>
		
		<tbody>
			<% @books.each do |book| %>
			
			<tr>
				<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %></td>
				<td><%= link_to book.title, book_path(book.id) %></td>
				<td><%= book.body %></td>
			</tr>
			
			<% end %>
		</tbody>
		
	</table>

