<% if user_signed_in? %>

    <div class="col-md-3">

			<h2>User info</h2>

			<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>

			<table class="table">
				<tr>
				  <th>name</th>
				  <td><%= user.name %></td>
				</tr>
				<tr>
				  <th>introduction</th>
				  <td><%= user.introduction %></td>
				</tr>
				<tr>
      		<th>follows</th>
          <th><%= link_to user.following_user.count,user_follower_path(user) %></th>
    	  </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to user.follower_user.count, user_followed_path(user) %></th>
        </tr>

			</table>
 			<% if current_user==user %>
			<div class="row">
       	 <%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>
  			</div>
  		
  		 		<% if current_user.following?(user) %>
            <div class="unfollow_button">
                <%= link_to  unfollow_path(user), method: :POST, class: "btn btn-primary" do %>
                フォローを外す
                <% end %>
            </div>
          <% else %>
            <div class="follow_button">
                <%= link_to  follow_path(user), method: :POST, class: "btn btn-success" do %>
                フォローする
                <% end %>
            </div>
          <% end %>
			<% end %>
			<h2 class="mt-3">New book</h2>

			<% if new_book.errors.any? %>

	  	<div id="error_explanation">
	  		<h2><%= new_book.errors.count %> errors prohibited this obj from being saved:</h2>
	    		<ul>
	    			<% new_book.errors.full_messages.each do |msg| %>
	      		<li><%= msg %></li>
	    			<% end %>
	    		</ul>
	  	</div>

			<% end %>


			<%= form_for(new_book, url:'/books') do |f| %>

			<div class="form-group">
				<label for="book_title">Title</label></br>
				<%= f.text_field :title, class: "form-control" %>
			</div>

			<div class="form-group">
				<label for="book_opinion">Opinion</label>
				<%= f.text_area :body, class: "form-control" %>
			</div>

			<div class="form-group">
			<%= f.submit 'Create Book', class: "btn btn-success"%>
			</div>

			<% end %>

  	</div>
<% end %>